@model IEnumerable<Blackboard_2_0.Models.Data.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="top-headline">
    <h1>Courses</h1>
    <p>
        <a class="btnStyle" asp-action="Create">Create New</a>
    </p>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                    @Html.DisplayNameFor(model => model.Name)    
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.CourseId">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CourseId">Details</a> |
                <a asp-action="Index" asp-controller="CourseContents" asp-route-id="@item.CourseId">Course Content</a> |
            </td>
        </tr>
}
    </tbody>
</table>
