@model AddStudentToGroupViewModel

@{
    ViewData["Title"] = "AddStudentToGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddStudentToGroup</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStudentToGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                <div class="form-group">
                    <label asp-for="StudentId" class="control-label">Student Id</label>
                    <select asp-for="StudentId" class="form-control" asp-items="@Model.Attends"></select>
                </div>
                <input type="hidden" asp-for="@Model.AssignersId" />
                <input type="hidden" asp-for="@Model.AssignmentId" />
            }

            <div class="form-group">
                <input type="submit" value="Add student" class="btnStyle" />
            </div>
        </form>
    </div>
</div>
