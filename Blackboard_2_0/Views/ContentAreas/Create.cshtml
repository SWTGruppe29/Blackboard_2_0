@model Blackboard_2_0.Models.Data.ContentArea

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ContentArea</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="ContentAreas" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if ((bool)ViewData["Check"])
            {
                <div class="form-group">
                    <label asp-for="FolderId" class="control-label"></label>
                    <select asp-for="FolderId" class ="form-control" asp-items="ViewBag.FolderId"></select>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="FolderId" />
            }
            <div class="form-group">
                <label asp-for="TextBlock" class="control-label"></label>
                <input asp-for="TextBlock" class="form-control" />
                <span asp-validation-for="TextBlock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
