@using System.Collections
@model Blackboard_2_0.Models.Data.Teaches

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Teaches</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AuId" class="control-label"></label>
                <select asp-for="AuId" class ="form-control" asp-items="ViewBag.AuId"></select>
            </div>
            <div class="form-group">
                <select class="form-control" id="Role" name="Role">
                    <option>Select Role</option> 
                    <option>Teacher</option> 
                    <option>Assistant Teacher</option> 
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Course">Back to Courses</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
