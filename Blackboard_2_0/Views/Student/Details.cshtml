@model StudentDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Id)
        </dt>
        <dd class="col-sm-10">
            <text>au</text>@for (var i = Model.Student.Id.ToString().Length; i < 6; i++)
                           {
                               <text>0</text>
                           }<text>@Model.Student.Id.ToString()</text>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
    <h6>Courses</h6>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Attends.First().Course.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attends.First().Status)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Attends) {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Course" asp-route-id="@item.CourseId">
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
        </tr>
    }
    </tbody>
</table>

<table class="table">
    <thead>
        <h6>Grades</h6>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grades.First().First().Assignment.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grades.First().First().Grade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Grades)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.First().Assignment.Course.Name)
                    <text> - </text>
                    @Html.DisplayFor(modelItem => item.First().Assignment.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.First().Grade)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>
